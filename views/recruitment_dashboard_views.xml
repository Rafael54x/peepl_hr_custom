<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_recruitment_dashboard" model="ir.actions.client">
        <field name="name">Recruitment Dashboard</field>
        <field name="tag">recruitment_dashboard</field>
    </record>

    <!-- Recruitment Progress Action -->
    <record id="recruitment_progress_action" model="ir.actions.act_window">
        <field name="name">Recruitment Progress</field>
        <field name="res_model">hr.applicant</field>
        <field name="view_mode">kanban,tree,graph,pivot,form</field>
        <field name="search_view_id" ref="hr_applicant_search_assessment"/>
        <field name="context">{'search_default_group_by_recruitment_phase': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">No recruitment data available</p>
            <p>Track your recruitment progress with interactive dashboard, charts and statistics.</p>
        </field>
    </record>

    <!-- Dashboard Menus -->
    <menuitem id="menu_recruitment_dashboard"
              name="Dashboard"
              parent="hr_recruitment.menu_hr_recruitment_root"
              action="action_recruitment_dashboard"
              sequence="1"/>
</odoo>
