<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="recruitment_progress_action" model="ir.actions.act_window">
        <field name="name">Recruitment Progress</field>
        <field name="res_model">recruitment.progress.evaluation</field>
        <field name="view_mode">kanban,list,graph,pivot,form</field>
        <field name="context">{
            'search_default_group_by_recruitment_phase': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No recruitment data available
            </p>
            <p>
                Track your recruitment progress with interactive dashboard, charts and statistics.
            </p>
        </field>
    </record>

    <!-- Dashboard Menu -->
    <menuitem
        name="Recruitment Dashboard"
        id="menu_recruitment_dashboard"
        parent="hr_recruitment.report_hr_recruitment"
        action="action_recruitment_dashboard"
        sequence="5"/>
</odoo>