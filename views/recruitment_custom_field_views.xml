<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_recruitment_custom_field_tree" model="ir.ui.view">
        <field name="name">recruitment.custom.field.tree</field>
        <field name="model">recruitment.custom.field</field>
        <field name="arch" type="xml">
            <list default_order="sequence desc">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="field_type"/>
                <field name="anchor_field" string="Position"/>
                <field name="position" string="Insert"/>
                <field name="validation_active" widget="boolean_toggle"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_recruitment_custom_field_form" model="ir.ui.view">
        <field name="name">recruitment.custom.field.form</field>
        <field name="model">recruitment.custom.field</field>
        <field name="arch" type="xml">
            <form create="true" edit="true" delete="true">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Field Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Priority Level"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="sequence" invisible="1"/>
                            <field name="field_type"/>
                        </group>
                        <group>
                            <field name="anchor_field"/>
                            <field name="position"/>
                            <field name="description"/>
                        </group>
                    </group>
                    
                    <group string="Field Type Options" invisible="field_type not in ['selection', 'many2one']">
                        <field name="selection_values" invisible="field_type != 'selection'" 
                               placeholder="Option 1&#10;Option 2&#10;Option 3" nolabel="1"/>
                        <field name="relation_model" invisible="field_type != 'many2one'" 
                               placeholder="e.g. res.partner" nolabel="1"/>
                    </group>
                    
                    <group string="Validation Rules">
                        <group>
                            <field name="validation_active"/>
                            <field name="validation_operator" invisible="not validation_active"/>
                            <field name="default_decision" invisible="not validation_active" string="Default Decision"/>
                        </group>
                        <group>
                            <field name="validation_value" invisible="not validation_active" placeholder="e.g., 60 or PT X"/>
                            <field name="target_decision" invisible="not validation_active"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert" invisible="not validation_active" style="margin: 0 16px;">
                        <strong>Examples:</strong><br/>
                        • <b>Single value:</b> 60 or "Passed"<br/>
                        • <b>Multiple values (in/not in):</b> A,B,C or "Failed,Rejected"<br/>
                        • <b>Range (between):</b> 50,100 or "B1,C2"<br/>
                        • <b>Ordered comparison (&gt;=, &lt;=):</b> For dropdown, uses order in Selection Values (e.g., B1 &gt;= means B1,B2,C1,C2)
                    </div>
                </sheet>
                <footer>
                    <div class="o_form_statusbar d-flex justify-content-between py-2">
                        <div class="o_statusbar_buttons d-flex align-items-center align-content-around flex-wrap gap-1">
                            <button string="Save &amp; Reload" class="btn btn-primary" type="object" name="action_refresh_page"/>
                        </div>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_recruitment_custom_field" model="ir.actions.act_window">
        <field name="name">Custom Fields</field>
        <field name="res_model">recruitment.custom.field</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
