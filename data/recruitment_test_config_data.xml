<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Recruitment Status Configuration -->
        <record id="status_on_progress" model="recruitment.status.config">
            <field name="name">On Progress</field>
            <field name="code">on_progress</field>
            <field name="sequence">1</field>
            <field name="active">True</field>
        </record>
        
        <record id="status_recommended" model="recruitment.status.config">
            <field name="name">Recommended</field>
            <field name="code">recommended</field>
            <field name="sequence">2</field>
            <field name="active">True</field>
        </record>
        
        <record id="status_offer_made" model="recruitment.status.config">
            <field name="name">Offer Made</field>
            <field name="code">offer_made</field>
            <field name="sequence">3</field>
            <field name="active">True</field>
        </record>
        
        <record id="status_do_not_pursue" model="recruitment.status.config">
            <field name="name">Do Not Pursue</field>
            <field name="code">do_not_pursue</field>
            <field name="sequence">4</field>
            <field name="active">True</field>
        </record>
        
    </data>
</odoo>
